<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--enabled属性必须必须前面-->
    <item android:state_enabled="false">
        <shape>
            <gradient
                android:startColor="@color/btn_disable_start"
                android:endColor="@color/btn_disable_end"
                android:angle="0"/>
            <corners android:radius="6dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="@color/btn_pressed_start"
                android:endColor="@color/btn_pressed_end"
                android:angle="0"/>
            <corners android:radius="6dp" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <gradient
                android:startColor="@color/btn_start"
                android:endColor="@color/btn_end"
                android:angle="0"/>
            <corners android:radius="6dp" />
        </shape>
    </item>

</selector>